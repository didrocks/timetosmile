<RelativeLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <fr.teamrocks.timetosmile.ui.CameraPreview
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fr.teamrocks.timetosmile.ui.StatusOverlayView
            android:id="@+id/statusOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/smileProgressBar"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/smileStatusText"
                android:layout_above="@+id/smileProgressText"
                android:layout_centerHorizontal="true"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/smileProgressText"
                android:layout_above="@+id/smileProgressBar"
                android:layout_alignParentEnd="true"
                android:paddingRight="10dp"/>


        </fr.teamrocks.timetosmile.ui.StatusOverlayView>

    </fr.teamrocks.timetosmile.ui.CameraPreview>



</RelativeLayout>
